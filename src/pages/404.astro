---

<Layout title={currentContent.title}>
  <main class="container mx-auto px-4 min-h-[80vh] flex items-center justify-center">
    <div class="max-w-2xl mx-auto text-center relative">
      {/* Astronaut Animation */}
      <div class="astronaut-container absolute w-full h-full">
        <div class="astronaut">
          <div class="astronaut-string"></div>
          <div class="astronaut-helmet">
            <div class="astronaut-glass"></div>
