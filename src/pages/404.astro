</Layout>

<style>
  .astronaut-container {
    pointer-events: none;
    opacity: 0.3;
    z-index: 1;
  }

  .astronaut {
    position: absolute;
    width: 140px;
    height: 140px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: float 6s ease-in-out infinite;
  }

  .astronaut-string {
    position: absolute;
    width: 2px;
    height: 100px;
    background: #cbd5e1;
    top: -100px;
    left: 50%;
    transform: translateX(-50%);
  }

  .astronaut-helmet {
    position: absolute;
    width: 60px;
    height: 60px;
    background: #e2e8f0;
    border: 4px solid #94a3b8;
    border-radius: 50%;
    left: 40px;
    top: 0;
    overflow: hidden;
  }

  .astronaut-glass {
    position: absolute;
    width: 70%;
    height: 70%;
    background: rgba(148, 163, 184, 0.2);
    border-radius: 50%;
    top: 15%;
    left: 15%;
    transform: rotate(-15deg);
  }

  .astronaut-body {
    position: absolute;
    width: 70px;
    height: 80px;
    background: #e2e8f0;
    border: 4px solid #94a3b8;
    border-radius: 40px;
    left: 35px;
    top: 50px;
    animation: pulse 2s ease-in-out infinite;
  }

  .astronaut-arm-left,
  .astronaut-arm-right {
    position: absolute;
    width: 25px;
    height: 40px;
    background: #e2e8f0;
    border: 4px solid #94a3b8;
    border-radius: 20px;
  }

  .astronaut-arm-left {
    left: -15px;
    top: 10px;
    transform: rotate(-20deg);
    animation: wave 2s ease-in-out infinite;
  }

  .astronaut-arm-right {
    right: -15px;
    top: 10px;
    transform: rotate(20deg);
  }

  .astronaut-leg-left,
  .astronaut-leg-right {
    position: absolute;
    width: 25px;
    height: 40px;
    background: #e2e8f0;
    border: 4px solid #94a3b8;
    border-radius: 20px;
    bottom: -30px;
  }

  .astronaut-leg-left {
    left: 10px;
    transform: rotate(10deg);
  }

  .astronaut-leg-right {
    right: 10px;
    transform: rotate(-10deg);
  }

  @keyframes float {
    0%, 100% {
      transform: translate(-50%, -50%) translateY(0) rotate(3deg);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-20px) rotate(-3deg);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  @keyframes wave {
    0%, 100% {
      transform: rotate(-20deg);
    }
    50% {
      transform: rotate(-40deg);
    }
  }

  @media (prefers-color-scheme: dark) {
    .astronaut-helmet,
    .astronaut-body,
    .astronaut-arm-left,
    .astronaut-arm-right,
    .astronaut-leg-left,
    .astronaut-leg-right {
      background: #1f2937;
      border-color: #4b5563;
    }
    .astronaut-string {
      background: #4b5563;
    }
    .astronaut-glass {
      background: rgba(75, 85, 99, 0.2);
    }
  }
</style>

<script define:vars={{ basePath }}>
  let count = 2;
  const countdownElement = document.getElementById('countdown');

  const timer = setInterval(() => {
    count--;
    if (countdownElement) {
      countdownElement.textContent = count.toString();
    }
    if (count <= 0) {
      clearInterval(timer);
      window.location.href = basePath || '/';
    }
  }, 1000);
</script>