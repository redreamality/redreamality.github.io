---
import Layout from '../../../layouts/Layout.astro';
import { getTalks, t } from '../../../utils/i18n';

const talks = await getTalks('en');
---

<Layout title="Talks">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Presentations & Talks</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Conference presentations, technical talks, and knowledge sharing sessions
      </p>
    </div>

    <!-- Talks -->
    {talks.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400 text-lg">No talks available in English yet.</p>
        <p class="text-gray-500 dark:text-gray-400 mt-2">
          <a href="/talks" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">
            View Chinese talks
          </a>
        </p>
      </div>
    ) : (
      <div class="space-y-8">
        {talks.map((talk) => (
          <article class="bg-white border border-gray-200 rounded-lg shadow-md p-6 dark:bg-gray-800 dark:border-gray-700">
            <div class="flex flex-col space-y-4">
              <div>
                <a href={`/en/talks/${talk.slug}`}>
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {talk.data.title}
                  </h2>
                </a>
                <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400 mt-2">
                  <span>
                    {talk.data.date.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'long', 
                      day: 'numeric' 
                    })}
                  </span>
                  {talk.data.location && (
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      {talk.data.location}
                    </span>
                  )}
                </div>
              </div>
              
              <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                {talk.data.description}
              </p>
              
              <div class="flex flex-wrap gap-4">
                {talk.data.slides && (
                  <a
                    href={talk.data.slides}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-3 py-1 text-sm text-blue-600 bg-blue-100 rounded-full hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-200 dark:hover:bg-blue-800 transition-colors"
                  >
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Slides
                  </a>
                )}
                {talk.data.video && (
                  <a
                    href={talk.data.video}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-3 py-1 text-sm text-red-600 bg-red-100 rounded-full hover:bg-red-200 dark:bg-red-900 dark:text-red-200 dark:hover:bg-red-800 transition-colors"
                  >
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10v4a2 2 0 002 2h2a2 2 0 002-2v-4M9 10V9a2 2 0 012-2h2a2 2 0 012 2v1"></path>
                    </svg>
                    Video
                  </a>
                )}
              </div>
              
              <div class="flex justify-between items-center pt-4">
                <a
                  href={`/en/talks/${talk.slug}`}
                  class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-green-600 rounded-lg hover:bg-green-700 focus:ring-4 focus:outline-none focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800 transition-colors"
                >
                  View Talk
                  <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    )}
  </div>
</Layout>
