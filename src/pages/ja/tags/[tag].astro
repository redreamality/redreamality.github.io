---
import Layout from '../../../layouts/Layout.astro';
import { getBlogPosts, getTags, getTagCounts, type Language } from '../../../utils/i18n';

// This is the Japanese tag detail page (/ja/tags/[tag] path)

export async function getStaticPaths() {
  const posts = await getBlogPosts('ja');
  const tags = await getTags('ja');

  return tags.map((tag) => ({
    params: { tag },
    props: {
      posts: posts
        .filter((post) => post.data.tags?.includes(tag))
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
      lang: 'ja' as Language,
    },
  }));
}

interface Props {
  posts: any[];
  lang: Language;
}

