---
import { type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import RelatedContent from '../../components/RelatedContent.astro';
import { getProjects, type Language } from '../../utils/i18n';
import { rankRelatedContent } from '../../utils/related';

export async function getStaticPaths() {
  // Get English projects
  const enProjects = await getProjects('en');
  
  return enProjects.map((project) => ({
    params: { slug: project.slug },
    props: { project, lang: 'en' as Language },
  }));
}

type Props = {
  project: CollectionEntry<'projects-en'>;
  lang: Language;
};

const { project, lang } = Astro.props;
const { Content, headings } = await project.render();

// Language-specific content
const content = {
  en: {
    publishedOn: "Published on",
    author: "Author",
    backToProjects: "â† Back to Projects",
    relatedTitle: "Other Projects"
  },
  zh: {
    publishedOn: "å‘å¸ƒäºŽ",
    author: "ä½œè€…",
    backToProjects: "â† è¿”å›žé¡¹ç›®",
    relatedTitle: "å…¶ä»–é¡¹ç›®"
  }
};

const currentContent = content[lang];
const basePath = lang === 'zh' ? '/cn' : '';

const allProjects = await getProjects(lang);
const relatedProjects = rankRelatedContent(allProjects, project as any, { dateField: 'pubDate', limit: 6 });
const relatedItems = relatedProjects.map((relatedProject) => ({
  href: `${basePath}/projects/${relatedProject.slug}`,
  title: relatedProject.data.title,
  description: relatedProject.data.description,
  date: relatedProject.data.pubDate
}));
---

<Layout title={project.data.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      {headings && headings.length > 0 && <TableOfContents headings={headings} />}
      <!-- Back to projects link -->
      <div class="mb-6">
        <a 
          href={`${basePath}/projects`}
          class="inline-flex items-center text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 transition-colors"
        >
          {currentContent.backToProjects}
        </a>
      </div>

      <!-- Project header -->
      <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {project.data.title}
        </h1>
        
        <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400 mb-4">
          <span>
            {currentContent.publishedOn} {project.data.pubDate.toLocaleDateString(lang === 'zh' ? 'zh-CN' : 'en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </span>
          {project.data.author && (
            <span>ðŸ‘¤ {project.data.author}</span>
          )}
        </div>

        <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
          {project.data.description}
        </p>
      </header>

      <!-- Project content -->
      <article class="prose prose-lg dark:prose-invert max-w-none">
        <Content />
      </article>

      <section class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <RelatedContent title={currentContent.relatedTitle} items={relatedItems} lang={lang} />
      </section>
    </div>
  </main>
</Layout>
