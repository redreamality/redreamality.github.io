---
import Layout from '../../layouts/Layout.astro';
import { getTalks, type Language } from '../../utils/i18n';

// This is the English talks listing (/talks path)
const lang: Language = 'en';

// Get talks for current language
const talks = await getTalks(lang);

// Language-specific content
const content = {
  en: {
    title: "Presentations",
    subtitle: "Technical talks, conference presentations, and knowledge sharing sessions",
    noTalksMessage: "No presentations available yet.",
    viewDetails: "View Details",
    presentedAt: "Presented at",
    date: "Date"
  },
  zh: {
    title: "演讲分享",
    subtitle: "技术演讲、会议分享和知识交流活动",
    noTalksMessage: "暂无演讲分享。",
    viewDetails: "查看详情",
    presentedAt: "演讲地点",
    date: "日期"
  }
};

const currentContent = content[lang];
const basePath = lang === 'zh' ? '/cn' : '';
---

<Layout title={lang === 'zh' ? '演讲' : 'Talks'}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">{currentContent.title}</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          {currentContent.subtitle}
        </p>
      </div>

      <!-- Talks -->
      {talks.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400 text-lg">{currentContent.noTalksMessage}</p>
        </div>
      ) : (
        <div class="space-y-8">
          {talks.map((talk) => (
            <article class="bg-white border border-gray-200 rounded-lg shadow-md p-6 dark:bg-gray-800 dark:border-gray-700">
              <div class="flex flex-col space-y-4">
                <div>
                  <a href={`${basePath}/talks/${talk.slug}`}>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {talk.data.title}
                    </h2>
                  </a>
                  <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400 mt-2">
                    <span>
                      {talk.data.date.toLocaleDateString(lang === 'zh' ? 'zh-CN' : 'en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                    {talk.data.location && (
                      <span>📍 {talk.data.location}</span>
                    )}
                    {talk.data.event && (
                      <span>🎤 {talk.data.event}</span>
                    )}
                  </div>
                </div>

                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  {talk.data.description}
                </p>

                <div class="flex justify-between items-center pt-4">
                  <div class="flex gap-4">
                    <a
                      href={`${basePath}/talks/${talk.slug}`}
                      class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 transition-colors"
                    >
                      {currentContent.viewDetails}
                      <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                      </svg>
                    </a>
                    {talk.data.slides && (
                      <a
                        href={talk.data.slides}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 dark:bg-gray-600 dark:text-gray-200 dark:hover:bg-gray-500 transition-colors"
                      >
                        <span class="mr-2">📊</span>
                        {lang === 'zh' ? '幻灯片' : 'Slides'}
                      </a>
                    )}
                    {talk.data.video && (
                      <a
                        href={talk.data.video}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-200 rounded-lg hover:bg-gray-300 dark:bg-gray-600 dark:text-gray-200 dark:hover:bg-gray-500 transition-colors"
                      >
                        <span class="mr-2">🎥</span>
                        {lang === 'zh' ? '视频回放' : 'Video'}
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </main>
</Layout>