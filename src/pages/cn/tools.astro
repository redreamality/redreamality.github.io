---
import Layout from '../../layouts/Layout.astro';
import { type Language } from '../../utils/i18n';

const lang: Language = 'zh';

const content = {
  en: {
    title: 'Tools',
    pageTitle: "Tools - Remy's Personal Website",
    gridCalculatorTitle: 'Grid Calculator',
    gridCalculatorDesc: 'Calculate grid dimensions and spacing easily'
  },
  zh: {
    title: '工具',
    pageTitle: '工具 - Remy的个人网站',
    gridCalculatorTitle: '网格计算器',
    gridCalculatorDesc: '轻松计算网格尺寸和间距'
  }
};

const currentContent = content[lang];
---

<Layout title={currentContent.pageTitle}>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center text-gray-900 dark:text-white">{currentContent.title}</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Grid Calculator Card -->
      <a href={lang === 'zh' ? '/cn/tools/grid-calculator' : '/tools/grid-calculator'} class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow cursor-pointer">
        <h2 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">{currentContent.gridCalculatorTitle}</h2>
        <p class="text-gray-600 dark:text-gray-300">{currentContent.gridCalculatorDesc}</p>
      </a>
    </div>
  </div>
</Layout>
