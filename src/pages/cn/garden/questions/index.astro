---
import Layout from '../../../../layouts/Layout.astro';
import { getQuestions, type Language } from '../../../../utils/i18n';

// This is the Chinese questions listing (/cn/garden/questions path)
const lang: Language = 'zh';

// Get questions for current language
const questions = await getQuestions(lang);

// Language-specific content
const content = {
  en: {
    title: "Thoughtful Questions",
    subtitle: "Problems I've thought about deeply. In the LLM era, the most valuable human quality is asking meaningful questions.",
    noQuestionsMessage: "No questions available yet.",
    viewDetails: "View Details",
    askedOn: "Asked on",
    date: "Date"
  },
  zh: {
    title: "思考问题",
    subtitle: "我深入思考过的问题。在大模型时代，人最可贵的品质是提出有价值的问题。",
    noQuestionsMessage: "暂无思考问题。",
    viewDetails: "查看详情",
    askedOn: "提出于",
    date: "日期"
  }
};

const currentContent = content[lang];
const basePath = lang === 'zh' ? '/cn' : '';
---

<Layout title={lang === 'zh' ? '思考问题' : 'Questions'}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">{currentContent.title}</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          {currentContent.subtitle}
        </p>
      </div>

      <!-- Questions -->
      {questions.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400 text-lg">{currentContent.noQuestionsMessage}</p>
        </div>
      ) : (
        <div class="space-y-8">
          {questions.map((question) => (
            <article class="bg-white border border-gray-200 rounded-lg shadow-md p-6 dark:bg-gray-800 dark:border-gray-700">
              <div class="flex flex-col space-y-4">
                <div>
                  <a href={`${basePath}/garden/questions/${question.slug}/`}>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {question.data.title}
                    </h2>
                  </a>
                  <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400 mt-2">
                    <span>
                      {question.data.date.toLocaleDateString(lang === 'zh' ? 'zh-CN' : 'en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                  </div>
                </div>

                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  {question.data.description}
                </p>

                <div class="flex justify-between items-center pt-4">
                  <div class="flex gap-4">
                    <a
                      href={`${basePath}/garden/questions/${question.slug}/`}
                      class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 transition-colors"
                    >
                      {currentContent.viewDetails}
                      <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </main>
</Layout>