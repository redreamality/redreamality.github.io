---
import Layout from '../../../layouts/Layout.astro';
import { getBlogPosts, getTags, getTagCounts, t, type Language } from '../../../utils/i18n';

// This is the English blog listing (/garden/blog path)
const lang: Language = 'en';

// Get blog posts and tags for current language
const posts = await getBlogPosts(lang);
const tags = await getTags(lang);
const tagCounts = await getTagCounts(lang);

// Language-specific content
const content = {
  en: {
    title: "Blog Articles",
    subtitle: "Technical insights, tutorials, and thoughts on software development",
    tagsTitle: "Browse by Tags",
    noPostsMessage: "No blog posts available yet.",
    readMore: "Read More",
    publishedOn: "Published on",
    author: "by"
  },
  zh: {
    title: "博客文章",
    subtitle: "技术见解、教程和软件开发思考",
    tagsTitle: "按标签浏览",
    noPostsMessage: "暂无博客文章。",
    readMore: "阅读更多",
    publishedOn: "发布于",
    author: "作者"
  }
};

const currentContent = content[lang];
const basePath = lang === 'zh' ? '/cn' : '';
---

<Layout title={lang === 'zh' ? '博客' : 'Blog'}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">{currentContent.title}</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          {currentContent.subtitle}
        </p>
      </div>

      <!-- Tags -->
      {tags.length > 0 && (
        <div class="mb-8">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">{currentContent.tagsTitle}</h2>
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a
                href={`${basePath}/tags/${tag}`}
                class="inline-block px-3 py-1 text-sm bg-blue-100 text-blue-800 rounded-full hover:bg-blue-200 dark:bg-blue-900 dark:text-blue-200 dark:hover:bg-blue-800 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        </div>
      )}
      <!-- Posts -->
      {posts.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400 text-lg">{currentContent.noPostsMessage}</p>
        </div>
      ) : (
        <div class="space-y-8">
          {posts.map((post) => (
            <article class="bg-white border border-gray-200 rounded-lg shadow-md p-6 dark:bg-gray-800 dark:border-gray-700">
              <div class="flex flex-col space-y-4">
                <div>
                  <a href={`${basePath}/garden/blog/${post.slug}`}>
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {post.data.title}
                    </h2>
                  </a>
                  <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400 mt-2">
                    <span>
                      {post.data.pubDate.toLocaleDateString(lang === 'zh' ? 'zh-CN' : 'en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                    <span>{currentContent.author} {post.data.author}</span>
                  </div>
                </div>

                <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                  {post.data.description}
                </p>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags
                      .filter(tag => tagCounts[tag] >= 2)
                      .map((tag) => (
                      <a
                        href={`${basePath}/tags/${tag}`}
                        class="inline-block px-2 py-1 text-xs bg-gray-100 text-gray-700 rounded hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600 transition-colors"
                      >
                        #{tag}
                      </a>
                    ))}
                  </div>
                )}

                <div class="flex justify-between items-center pt-4">
                  <a
                    href={`${basePath}/garden/blog/${post.slug}`}
                    class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 transition-colors"
                  >
                    {currentContent.readMore}
                    <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </main>
</Layout>