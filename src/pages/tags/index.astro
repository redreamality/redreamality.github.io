---
import Layout from '../../layouts/Layout.astro';
import { getBlogPosts, getTags, type Language } from '../../utils/i18n';

// This is the English tags listing (/tags path)
const lang: Language = 'en';

// Get blog posts and tags for current language
const posts = await getBlogPosts(lang);
const tags = await getTags(lang);

// Calculate post count for each tag
const tagCounts = tags.reduce((acc, tag) => {
  acc[tag] = posts.filter(post => post.data.tags?.includes(tag)).length;
  return acc;
}, {} as Record<string, number>);

// Language-specific content
const content = {
  en: {
    title: "Tags",
    subtitle: "Browse articles by topic",
    noTagsMessage: "No tags available yet.",
    articlesCount: "articles",
    articleCount: "article"
  },
  zh: {
    title: "标签列表",
    subtitle: "按主题浏览文章",
    noTagsMessage: "暂无标签。",
    articlesCount: "篇文章",
    articleCount: "篇文章"
  }
};

const currentContent = content[lang];
const basePath = lang === 'zh' ? '/cn' : '';
---

<Layout title={lang === 'zh' ? '标签' : 'Tags'}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">{currentContent.title}</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          {currentContent.subtitle}
        </p>
      </div>

      {tags.length === 0 ? (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400 text-lg">{currentContent.noTagsMessage}</p>
        </div>
      ) : (
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          {tags.map((tag) => (
            <a
              href={`${basePath}/tags/${tag}`}
              class="bg-white border border-gray-200 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow dark:bg-gray-800 dark:border-gray-700"
            >
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="text-2xl mr-2">🏷️</span>
                  <h2 class="text-xl font-semibold text-gray-900 dark:text-white">#{tag}</h2>
                </div>
                <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-sm font-medium px-3 py-1 rounded-full">
                  {tagCounts[tag]} {tagCounts[tag] === 1 ? currentContent.articleCount : currentContent.articlesCount}
                </span>
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </main>
</Layout>