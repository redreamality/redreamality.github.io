---
import { detectLanguageFromPath, getAlternateLanguagePath, i18nConfig, t, type Language } from '../utils/i18n';

interface Props {
  currentPath?: string;
  showAvailability?: boolean;
  instanceId?: string;
}

const { currentPath = Astro.url.pathname, showAvailability = false, instanceId = 'default' } = Astro.props;
const currentLang = detectLanguageFromPath(currentPath);

const languageMeta: Record<Language, { label: string; emoji: string; checkingText: string }> = {
  en: { label: 'English', emoji: 'ğŸ‡ºğŸ‡¸', checkingText: 'Checking...' },
  zh: { label: 'ä¸­æ–‡', emoji: 'ğŸ‡¨ğŸ‡³', checkingText: 'æ£€æŸ¥ä¸­...' },
  ja: { label: 'æ—¥æœ¬èª', emoji: 'ğŸ‡¯ğŸ‡µ', checkingText: 'ç¢ºèªä¸­...' },
};

// Check if we're on a content page to show availability
const cleanPath = currentPath.replace(/^\/(cn|ja)/, ''); // Remove /cn or /ja prefix if present
const isContentPage = cleanPath.includes('/blog/') || cleanPath.includes('/garden/talks/');

// Generate unique IDs for this instance
const toggleBtnId = `language-toggle-btn-${instanceId}`;
const dropdownId = `language-dropdown-${instanceId}`;
const refreshBtnId = `refresh-availability-${instanceId}`;
const zhAvailabilityId = `zh-availability-${instanceId}`;
const enAvailabilityId = `en-availability-${instanceId}`;
const jaAvailabilityId = `ja-availability-${instanceId}`;

const availabilityIdMap: Record<Language, string> = {
  en: enAvailabilityId,
  zh: zhAvailabilityId,
  ja: jaAvailabilityId,
};
---

<div class="language-toggle">
  <div class="relative inline-block text-left">
    <button
      id={toggleBtnId}
      type="button"
      class="inline-flex items-center justify-center w-full rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-800 text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      aria-expanded="false"
      aria-haspopup="true"
    >
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
      </svg>
      {languageMeta[currentLang].label}
      <svg class="ml-2 -mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>

    <div
      id={dropdownId}
      class="hidden opacity-0 origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white dark:bg-gray-800 ring-1 ring-black ring-opacity-5 focus:outline-none z-50 transition-opacity duration-200"
      role="menu"
      aria-orientation="vertical"
      aria-labelledby={toggleBtnId}
    >
      <div class="py-1" role="none">
        {i18nConfig.languages.map((langOption) => (
          <a
            href={langOption === currentLang ? currentPath : getAlternateLanguagePath(currentPath, langOption)}
            class="flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-900 dark:hover:text-white"
            role="menuitem"
            class:list={[langOption === currentLang && 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white']}
          >
            <span class="mr-3">{languageMeta[langOption].emoji}</span>
            <div class="flex flex-col">
              <span>{languageMeta[langOption].label}</span>
              {isContentPage && showAvailability && (
                <span class="text-xs text-gray-500 dark:text-gray-400" id={availabilityIdMap[langOption]}>
                  {languageMeta[langOption].checkingText}
                </span>
              )}
            </div>
            {langOption === currentLang && <span class="ml-auto text-blue-600 dark:text-blue-400">âœ“</span>}
          </a>
        ))}

        {isContentPage && (
          <div class="border-t border-gray-200 dark:border-gray-600 mt-1 pt-1">
            <div class="px-4 py-2 text-xs text-gray-500 dark:text-gray-400">
              <div class="flex items-center justify-between">
                <span>{t('language', currentLang)}</span>
                <button
                  id={refreshBtnId}
                  class="text-blue-600 dark:text-blue-400 hover:underline"
                  title="Refresh availability"
                >
                  â†»
                </button>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</div>

<script is:inline define:vars={{ toggleBtnId, dropdownId, refreshBtnId, zhAvailabilityId, enAvailabilityId, jaAvailabilityId }}>
  // Language toggle dropdown functionality
  const toggleBtn = document.getElementById(toggleBtnId);
  const dropdown = document.getElementById(dropdownId);
  const refreshBtn = document.getElementById(refreshBtnId);

  const zhAvailability = document.getElementById(zhAvailabilityId);
  const enAvailability = document.getElementById(enAvailabilityId);
  const jaAvailability = document.getElementById(jaAvailabilityId);

  function toggleDropdown() {
    if (!dropdown || !toggleBtn) return;

    const isHidden = dropdown.classList.contains('hidden');

    if (isHidden) {
      dropdown.classList.remove('hidden');
      toggleBtn.setAttribute('aria-expanded', 'true');
      dropdown.offsetHeight;
      dropdown.classList.remove('opacity-0');
      dropdown.classList.add('opacity-100');

      if (zhAvailability || enAvailability || jaAvailability) {
        checkContentAvailability();
      }
    } else {
      dropdown.classList.remove('opacity-100');
      dropdown.classList.add('opacity-0');
      toggleBtn.setAttribute('aria-expanded', 'false');

      setTimeout(() => {
        dropdown.classList.add('hidden');
      }, 200);
    }
  }

  function setAvailability(el, text, isAvailable, lang) {
    if (!el) return;

    el.textContent = text;
    el.className = isAvailable
      ? 'text-xs text-green-600 dark:text-green-400'
      : 'text-xs text-gray-500 dark:text-gray-400';

    if (lang === 'zh' && !isAvailable) {
      el.className = 'text-xs text-gray-500 dark:text-gray-400';
    }
  }

  // Check content availability for current page
  async function checkContentAvailability() {
    const currentPath = window.location.pathname;
    const cleanPath = currentPath.replace(/^\/(cn|ja)/, '');
    const isContentPage = cleanPath.includes('/blog/') || cleanPath.includes('/garden/talks/');
    if (!isContentPage) return;

    try {
      let contentType = '';
      let slug = '';

      if (cleanPath.includes('/blog/')) {
        contentType = 'blog';
        slug = cleanPath.split('/blog/')[1].replace(/\/$/, '');
      } else if (cleanPath.includes('/garden/talks/')) {
        contentType = 'garden/talks';
        slug = cleanPath.split('/garden/talks/')[1].replace(/\/$/, '');
      }

      if (!slug) return;

      const [zhExists, enExists, jaExists] = await Promise.all([
        checkContentExists(contentType, slug, 'zh'),
        checkContentExists(contentType, slug, 'en'),
        checkContentExists(contentType, slug, 'ja')
      ]);

      if (zhAvailability) {
        setAvailability(zhAvailability, zhExists ? 'âœ“ å¯ç”¨' : 'âœ— æš‚æ— ', zhExists, 'zh');
      }

      if (enAvailability) {
        setAvailability(enAvailability, enExists ? 'âœ“ Available' : 'âœ— Not available', enExists, 'en');
      }

      if (jaAvailability) {
        setAvailability(jaAvailability, jaExists ? 'âœ“ åˆ©ç”¨å¯èƒ½' : 'âœ— ãªã—', jaExists, 'ja');
      }
    } catch (error) {
      console.warn('Error checking content availability:', error);
      if (zhAvailability) {
        zhAvailability.textContent = 'æ£€æŸ¥å¤±è´¥';
      }
      if (enAvailability) {
        enAvailability.textContent = 'Check failed';
      }
      if (jaAvailability) {
        jaAvailability.textContent = 'ç¢ºèªå¤±æ•—';
      }
    }
  }

  // Check if content exists by attempting to fetch it
  async function checkContentExists(type, slug, lang) {
    try {
      const prefix = lang === 'zh' ? '/cn' : lang === 'ja' ? '/ja' : '';
      const path = `${prefix}/${type}/${slug}`;
      const response = await fetch(path, { method: 'HEAD' });
      return response.ok;
    } catch (error) {
      return false;
    }
  }

  // Event listeners
  if (toggleBtn && dropdown) {
    toggleBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      toggleDropdown();
    });

    document.addEventListener('click', (e) => {
      if (!toggleBtn.contains(e.target) && !dropdown.contains(e.target)) {
        if (!dropdown.classList.contains('hidden')) {
          dropdown.classList.add('hidden');
          dropdown.classList.remove('opacity-100');
          dropdown.classList.add('opacity-0');
          toggleBtn.setAttribute('aria-expanded', 'false');
        }
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !dropdown.classList.contains('hidden')) {
        dropdown.classList.add('hidden');
        dropdown.classList.remove('opacity-100');
        dropdown.classList.add('opacity-0');
        toggleBtn.setAttribute('aria-expanded', 'false');
        toggleBtn.focus();
      }
    });
  }

  if (refreshBtn) {
    refreshBtn.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      checkContentAvailability();
    });
  }

  if (zhAvailability || enAvailability || jaAvailability) {
    setTimeout(checkContentAvailability, 100);
  }
</script>

<style>
  .language-toggle {
    @apply relative;
  }
</style>
